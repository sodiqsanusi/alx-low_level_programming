# Creates a makefile with a full-on compilation process

CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
RM = rm -f

.PHONY: all clean oclean fclean re

all: ${SRC}
	${CC} ${SRC} -o ${NAME}

clean:
	${RM} *~ ${NAME}

oclean:
	${RM} ${OBJ}

fclean:
	${RM} *~ ${NAME} ${OBJ}

re:
	fclean all
